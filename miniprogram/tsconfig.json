{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "@dcloudio/types",
      ".vscode"
    ]
  },
  "include": [
    "tmui/**/*.ts",
    "tmui/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.nvue",
    "./src/*"
  ]
}